<%- include('header') %>
<%- include('navigation-bar') %>
<%- include('message') %>
<div class="container" style="max-width: 500px;margin-top: 30px;">
    <form action="/login" method="post">
        <div>
            <h2>Provide credentials</h2>
        </div>
        <input id="referrer" type="text" name="referrer" class="form-control" style="display:none;">
        <script>
            $(document).ready(()=> {
                $('#referrer').val(document.referrer);
            });
        </script>
        <label><b>(Test account: ID: admin, password: admin, type: admin)</b></label>
        <div class="form-group">
            <label for="userID">User ID: (test admin)</label>
            <input type="text" class="form-control" id="userID" name="userID" placeholder="Enter user ID" required>
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Enter password" required>
        </div>
        <div>
            <label>Select User Type:</label>
            <div class="w3-center w3-margin" data-toggle="buttons">
                <label  class="btn btn-light">
                    <input  type="radio" name="userType" value="student" checked> Student
                </label>
                <label  class="btn btn-light">
                    <input  type="radio" name="userType" value="teacher"> Teacher
                </label>
                <label  class="btn btn-light">
                    <input  type="radio" name="userType" value="admin"> Admin
                </label>
            </div>
        </div>
        <div class="w3-center">
            <button type="reset" class="btn btn-danger">Reset</button>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>

</div>
<%- include('footer') %>